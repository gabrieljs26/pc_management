<odoo>
    <record id="view_pc_component_form" model="ir.ui.view">
        <field name="name">pc.component.form</field>
        <field name="model">pc.component</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="especificaciones"/>
                        <field name="precio"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pc_component_tree" model="ir.ui.view">
        <field name="name">pc.component.tree</field>
        <field name="model">pc.component</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="precio"/>
            </tree>
        </field>
    </record>
</odoo>
