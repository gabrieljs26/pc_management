<odoo>
    <record id="view_pc_computer_form" model="ir.ui.view">
        <field name="name">pc.computer.form</field>
        <field name="model">pc.computer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="components_ids" />
                        <field name="ultima_mod"/>
                        <field name="precio_total" />
                        <field name="incidencias"/>
                        <field name="tags" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pc_computer_list" model="ir.ui.view">
        <field name="name">pc.computer.list</field>
        <field name="model">pc.computer</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="user_id"/>
                <field name="precio_total"/>
            </list>
        </field>
    </record>
</odoo>
