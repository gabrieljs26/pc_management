<odoo>
    <record id="view_pc_computer_form" model="ir.ui.view">
        <field name="name">pc.computer.form</field>
        <field name="model">pc.computer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="components_ids" widget="many2many_tags"/>
                        <field name="ultima_mod"/>
                        <field name="precio_total" readonly="1"/>
                        <field name="incidencias"/>
                        <field name="tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pc_computer_tree" model="ir.ui.view">
        <field name="name">pc.computer.tree</field>
        <field name="model">pc.computer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
                <field name="precio_total"/>
            </tree>
        </field>
    </record>
</odoo>
